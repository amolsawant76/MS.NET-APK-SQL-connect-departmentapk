@model List<DepartmentApk.Models.department>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Department</h2>

<form class="d-flex col-3 p-2" action="/Department/Index">
    <input class="form-control me-3" type="text" placeholder="Search"
           value="@ViewBag.search" id="search" name="search">
    <button class="btn btn-primary" type="submit">Search</button>
</form>
<table class="table">
    <tr>
        <th>Department ID</th>
        <th>Department Name</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.Id</td>
    <td>@item.Name</td>
    <td>
        <a class="btn btn-primary" href="/Department/Create/@item.Id">Create</a>
    </td>
    <td>
        <a class="btn btn-danger" href="/Department/Delete/@item.Id">Delete</a>
    </td>
    <td>
        <a class="btn btn-info" href="/Department/Details/@item.Id">Details</a>
    </td>
    <td>
        <a class="btn btn-warning" href="/Department/Edit/@item.Id">Edit</a>
    </td>
</tr>
     }
</table>


